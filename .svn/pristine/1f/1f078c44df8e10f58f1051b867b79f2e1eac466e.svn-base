/* pages/index/firm/promote/addPromote/addPromote.wxss */
/* 头部返回按钮 */
image{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
}

.delSale{
   border: 1rpx solid #000;
    margin: 100rpx 10rpx 0 0;
    display: inline-block;
    width: 10rpx;
    border-radius: 25rpx;
    background: #F37B1D;
    color: white;
    padding: 0rpx 10rpx;
    font-size: 30rpx
}

.discounts{
  border: 1rpx solid grey;
  display: inline-block;
  margin:0 5%;
  width:25%;
  text-align: right
}
.percentage{
    border: 1rpx solid grey;
    display: inline-block;
    margin-left: 5%;
    width:13%;
    text-align: right
}
.changeSize{
  font-size: 40rpx;
}
.per{

   display: inline-block;
   width: 80rpx;
}
.toCenter{
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    vertical-align: top
}
.count{
   text-align: center
}


.choose{
      display: block;
      text-align: center;
      width: 30%;
      margin:50rpx 35% 0 35%;
}
.toButtom{
    position: fixed;
    bottom:50rpx;
}

radio {
      transform:scale(0.7);
    }

 /* 模态框 */
show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}


