      </view>
      <view class="text-gray text-sm flex" style='font-size:35rpx;'>
        <text class="text-price text-red">120.00元</text>
        <text class="text-cut text-black margin-left-sm">约60分钟</text>
      </view>
    </view>
    <view class='action text-right'>
