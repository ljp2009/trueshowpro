<!--pages/index/user/staff/diary/addDiary/addDiary.wxml-->
<cu-custom bgColor="bg-gray" isBack="{{true}}" style="color:#000;">
  <view slot="backText" style='font-size:36rpx;color:#000;'>返回</view>
  <view slot="content" style='font-size:39rpx;margin-left:-50rpx;color:#000;'>我的动态</view>
</cu-custom>
<view class="bg-yellow">
  <view class="action">
    <text class="text-black" style='display:block;font-size:36rpx;text-align:center;color:#444;height:60rpx;line-height:60rpx;'>友情提示：乱发广告，容易掉粉</text>
  </view>
</view>
<view style='height:30rpx;'></view>
<view class="action">
  <text class="text-black upload" style='display:block;font-size:35rpx;text-align:left;margin-left:20rpx;color:#555;height:55rpx;line-height:55rpx;'>上传图片：</text>
</view>
<view class='bg-white' style='padding-top:30rpx;'>
  <view class='add-img' style='display:flex;align-items:center;justify-content:center;float:left;'>
    <text class='cuIcon-roundaddfill text-orange icon-position add'></text>
  </view>
  <view class='add-img' style='display:flex;align-items:center;justify-content:center;float:right;margin-right:45rpx;'>
    <text class='cuIcon-roundaddfill text-orange icon-position add'></text>
  </view>
  <view style='clear:both;height:10rpx;'></view>
  <view class="cu-form-group textareatext bg-white margin">
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="写写你的优势，擅长的项目、教育背景、培训经历和经验等等" style='font-size:33rpx;color:#404040;'></textarea>
  </view>
  <view class="action text-right margin" role="" aria-label="" style='font-size:36rpx;margin-top:5rpx;'>（0/100）</view>
  <view style='height:15rpx;'></view>
</view>


<view style='height:30rpx;'></view>
<view class="flex flex-direction send" role="" aria-label="" style='width:40%;'>
  <button class="cu-btn bg-orange margin-tb-sm lg button-hover" role="button" aria-label="" aria-disabled="false" style='height:88rpx;line-height:88tpx;font-size:45rpx;background-color:F40;letter-spacing:20rpx;'>发布</button>
</view>