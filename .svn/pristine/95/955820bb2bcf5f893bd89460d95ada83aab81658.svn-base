/* 头部返回图标 */
image{
  width: 35rpx;
  height: 35rpx;
}
/* 分类导航栏间距 */
.nav .cu-item{
  margin: 0;
  padding: 0;
}
/* 分类导航栏选中样式 */
.choose button{
  background-color: #ff6600;
  color: white;
}
.nochoose button{
  background-color: #ddd;
}
.catBtn{
  color:#FF6600;
}
/* 滑动操作 */
.touch-item {  
  display: flex;  
  justify-content: space-between;  
  border-bottom: 1rpx solid #ccc;  
  width: 100%;  
  overflow: hidden;
} 
.touch-content {  
  width: 100%;  
  /* line-height: 50rpx;     */
  -webkit-transition: all 0.4s;  
  transition: all 0.4s;  
  -webkit-transform: translateX(180rpx);  
  transform: translateX(180rpx);  
  margin-left: -180rpx;
} 
.del {  
  background-color: orangered;  
  width: 160rpx;
  height: 140rpx;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  justify-content: center;  
  color: #fff;  
  -webkit-transform: translateX(180rpx);  
  transform: translateX(180rpx);  
  -webkit-transition: all 0.4s;  
  transition: all 0.4s;
} 
.touch-move-active .content, .touch-move-active .del {  
  -webkit-transform: translateX(0);  
  transform: translateX(0);
} 
.row {  
  display: flex;  
  flex-direction: row;
} 
.column {  
  display: flex;  
  flex-direction: column;
} 
.full_width { 
  width: 100%;
}
.hide{
  display: none!important;
}

/* 上架下架按钮样式 */
.list{
 position: relative;
 z-index: 2;
 overflow: hidden;
 background-color: white;
 margin-top: 2rpx;
 display: flex;
 align-items: center;
 justify-content:space-between;
 min-height: 200rpx;
}
.delete{
 position: absolute;
 top:0rpx;
 background-color: rgba(0,0,0,0.5);
 width: 180rpx;
 text-align: center;
 z-index: 1;
 right: 0;
 color: #fff;
 height: 100%;
 display: flex;
 align-items: center;
 justify-content: center;
}
.pull{
  width: 120rpx;
  border: 2px solid #4ACA60;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  font-size: 17px;
}
