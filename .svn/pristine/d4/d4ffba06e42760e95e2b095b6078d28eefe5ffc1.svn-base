/* pages/index/user/staff/professionalPic/professionalPic.wxss */
.top{
  font-size: 30rpx;
  margin-left: 60rpx;
}
/* 头部返回 */
.back{
  background: url(http://ljp.jujiaoweb.com/images/index/icon16.png) no-repeat;
  width: 35rpx;
  height: 35rpx;
}
.bigPic{
  background-color: #fff;
  border: 2px solid #ccc;
  width:95%;
  margin: 15px auto;
  padding:10px;
  border-radius: 20px;
}
.bigPic image{
  width:100%;
  border-radius:20px;
}
/* 照片的位置 */
.textareatext{
  border-radius: 20rpx;
  border: 5rpx solid gainsboro;
  height: 400rpx;
}
.cu-avatar{
  width: 200rpx;
  height: 150rpx;
}
/* 建议 */
.advice{
  font-size: 20rpx;
  margin-left: 50rpx;
}
/* 上传图片 */
.upload{
  font-size: 25rpx;
}
.imgContain{
  width:90%;
  margin:auto;

}
.imgList{
  width:28%;
  height: 100px;
  border: 2px solid #ccc;
  display: inline-block;
  background-color:white;
  margin: 10px 1%;
}
.imgList image{
  left:40%;
  top:40px;
}

.add-img {
  border: 1rpx solid gray;
  width: 28%;
  height: 200rpx;
  padding: 10rpx;
  display: inline-block;
  margin-left: 2%;
  margin-top: 15rpx;
  position: relative;
  vertical-align: top;
}
.delete-btn{
  position: absolute;
  bottom:5px;
  right: 5px;
  width:20px;
  height:20px;
}
.add-btn{
  position: absolute;
  bottom:40px;
  right: 40%;
  width:20px;
  height:20px;
}
.pic{
  width:100%;
  height: 100%;
}


