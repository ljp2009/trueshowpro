/* pages/index/user/staff/certificate/certStatus/certStatus.wxss */
.clear{
  clear: both;
}
page{
  background-color:white;
}
.wrap{
  width: 100%;
  height: 100%;
  background-color: white;
}
.head .cu-bar{
  margin-top: 1%;
  min-height:  180rpx;  
}
.box{
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 35rpx;
  background-color: rgb(228, 224, 224);
}
.head .cu-bar text{
    font-size: 40rpx;
    margin-right: 40%;
} 
.cu-bar {
    min-height:  20rpx;
}
.wrap .flow{
  margin-left: 4%;
  margin-top: 2%;
  font-size: 30rpx;
}
.wrap .name{
  font-size: 30rpx;
  margin-left: 4%;
}

.wrap .edu{
  width: 39%;
  float: right;
  font-size: 30rpx
}
.wrap input{
  border: 1rpx solid gainsboro;
  width: 95%;
  margin-top: 2%;
  height: 40px;
  line-height:40px;
  padding:0 10px;
  }
.wrap .number{
  font-size: 30rpx;
  margin-left: 4%;
  margin-top: 4%;
}
.wrap .add{
  font-size: 30rpx;
  margin-left: 4%;
  margin-top: 4%;
}
.wrap .sex{
  width: 20%;
  float: left;
  margin-left: 4%;
  font-size: 30rpx;
}
.wrap .radio{
  width: 40%;
  float: right;
  font-size: 30rpx;
}
.wrap .number text{
  display: block;
}
.wrap .flex{
  margin-top: 4%;
  margin-left: 4%;
  font-size: 30rpx;
}
.wrap .flex text{
  margin-left: 4%;
  font-size: 30rpx;
}
.wrap .edu1{
  width: 100%;
  display: block;
  margin-top: 4%;
  margin-left: 4%;
  font-size: 30rpx;
}
.wrap .edu1 .fit{
  width: 100%;
  color: #ccc;
  display: block;
  font-size: 25rpx;
}
.wrap button{
  width: 40%;
   margin-top: 8%;
   margin-bottom: 4%;
  background-color: #FF6600;
  color:white;
  font-weight:bold;

}
.picContain1,.picContain2{
  height:140px;
  margin-right:15px;
  padding:10px;
  
}
.picContain1 .cardFace,.picContain1 .cardBack{
  display: inline-block;
  width:100px;
  margin-left:30px;
}

.picContain1 .cardFace view,.picContain1 .cardBack view{
  height: 100px;
  border:1px solid #ccc;

}
.picContain1 .cardFace text,.picContain1 .cardBack text{
  display: inline-block;
  width:100%;
  text-align:center;
  padding:5px 0;
}
/* 身份证照片 start  */
.imgContain{
  width:90%;
  margin:auto;

}
.imgList{
  width:28%;
  height: 100px;
  border: 2px solid #ccc;
  display: inline-block;
  background-color:white;
  margin: 10px 1%;
}
.imgList image{
  left:40%;
  top:40px;
}

.add-img {
  border: 1rpx solid #ccc;
  width: 28%;
  height: 200rpx;
  padding: 10rpx;
  display: inline-block;
  margin-left: 2%;
  margin-top: 15rpx;
  position: relative;
  vertical-align: top;
}
.delete-btn{
  position: absolute;
  bottom:5px;
  right: 5px;
  width:20px;
  height:20px;
}
.add-btn{
  position: absolute;
  bottom:40px;
  right: 40%;
  width:20px;
  height:20px;
}
.pic{
  width:100%;
  height: 100%;
}
/* 身份证照片 end  */
