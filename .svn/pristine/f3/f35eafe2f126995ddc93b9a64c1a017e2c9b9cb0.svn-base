/* pages/index/firm/firmIndex/searchFirm/searchFirm.wxss */
/*  关键字查找  */
.main{
  margin: 30rpx auto 5rpx auto;
  padding-left: 53rpx;
  color: #333;
}
/* 查找结果 */
.mainHead{
  font-size: 36rpx;
  color: black;
}
/* 查找结果标题 */
.mainHead .txt{
  padding-right: 10rpx;
  padding-bottom: 10rpx；
}
.padding{
  border-bottom:1rpx solid #999;
}
.padding-lr{
  padding:0;
}
/* 查找结果地址 */
.padding .address{
  position: relative;
  margin-bottom: 10rpx；
}
/* 三角图标 */
.address .btn,.wrapAddress .wrapBtn{
  font-size: 40rpx;
  font-weight: bold;
  position: absolute;
  right: 7rpx;
}
/* 下层匹配结果外边框 */
.paddingWrap{
  width: 100%;
  border: 5rpx solid orangered;
  padding-left: 50rpx;
}
.paddingWrap .wrapAddress{
  position: relative;
}
.wrapAddress .wrapBtn{ 
  right: 27rpx;
}
/* 申请加入按钮 */
.wrap{
  position: relative;
  height: 100%;
}
.footer{
  height: 240rpx;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}
.btnTwo{
  width: 80%;
  height: 45%;
  color: white;
  margin: auto;
  letter-spacing:30rpx;
  font-size: 45rpx;
  position: absolute;
  bottom: 65rpx;
  left:10%;
}

