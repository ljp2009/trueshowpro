/* pages/index/firm/firmIndex/firmInfo/firmInfo.wxss */

.grid.col-4>view {
  width:23%;
  
}
.cu-form-group input {
  font-size:26rpx;
  color:#555;
  padding-left:-20rpx;
  
}
.cu-form-group {
background-color:var(--white);
padding:1rpx 10rpx;
display:flex;
align-items:center;
min-height:80rpx;
justify-content:space-between;
}
button{
  letter-spacing: 20rpx;
  width:290rpx;
}
.main{
  padding-left: 50rpx;
  margin: 15rpx auto;
  letter-spacing: 10rpx;
  font-size: 38rpx;
  color: #222;
}
input{
  margin: auto;
  border: 1rpx solid gray; 
  margin-bottom: 15rpx;
  padding-left: 15rpx;
}
/* 区域 */
.address{
  width: 90%;
  margin: auto;
}
.address input{
  float: left;
  font-size: 30rpx;
  padding-left: 15rpx;
  margin:1%;
}
/* 道路门牌号 */
.way{
  letter-spacing: normal;
}
/* 清除浮动 */
.clear{
  clear: both;
}
/* 标注 */
.label{
  width: 88%;
  margin: 50rpx auto;
  font-size: 30rpx;
  color: #222;
}
.btn{
  width: 50%;
  margin: auto;
  margin-top: 160rpx;
  letter-spacing: 20rpx;
  text-align: center;
  font-size: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
}

