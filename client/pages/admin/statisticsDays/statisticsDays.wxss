/* pages/admin/statisticsDays/statisticsDays.wxss */
/* 头部 */
.wrapView{
  width: 100%;
  min-height: 100%;
  background-color: #fff;
  padding-top: 20rpx;
}
.flex .txt{
  font-size: 30rpx;
  font-weight: bold;
  padding-top: 15rpx;
  padding-left: 6%;
}
.flex .inpOne,.flex .inpTwo{
  height: 30rpx;
  width: 28%;
  text-align: center;
  margin-left: 50rpx;
}
/* 中心内容 */
.clear{
clear: both;
}
.statistics{
width: 100%;
height: 22%;
position: relative;
}
.statistics .increase{
position: absolute;
right: 5%;
margin-right: 5%;
padding-top: 2%;
}
.statistics .num1{
position: absolute;
right: 30%;
margin-right: 5%;
padding-top: 2%;
}
.statistics input{
font-weight: bold;
float: left;
text-align: center;
font-size: 20rpx;
}
.wrap .sum{
margin-right: 5%;
height: 20%;
}
/* 表格代码   */
.table{
  border:1px solid #dadada;
  border-right:0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th,.td{
  padding: 2px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #FCFCfC;
  text-align: center;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.tdRight{
  border-right: 1px solid #dadada;
}
.th{
  font-weight: 800;
  font-size: 35rpx;
  color: #000;
}
.td{
  font-size: 28rpx;
}

