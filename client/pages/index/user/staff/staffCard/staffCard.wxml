    <!-- 车辆配置 -->
    <view class="car-config">
      <view class='log-list'>
        <view class="hot-content">
          <text class="hot-title">车辆配置 </text>
        </view>
      </view>
      <view class='config-all'>
        <view class='config-left'>
          <view>品牌</view>
          <view>车系</view>
          <view>车款类型</view>
