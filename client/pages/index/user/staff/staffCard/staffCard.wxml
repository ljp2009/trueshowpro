</button>
<view wx:if="{{pay_all}}" class='all_pay'>
  <view class='details-all'>
    <!-- 车辆图片展示部分 -->
    <view class='details-photo'>
      <view class="page-section page-section-spacing swiper">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
          <block wx:for="{{allpiclist}}" wx:key="{{index}}" wx:for-index="i">
            <swiper-item wx:if="{{i < 5}}">
              <image src='{{item}}' bindtap='topic' class="swiper-item"></image>
            </swiper-item>
          </block>
        </swiper>
      </view>
    </view>
    <!-- 文字说明板块 -->
    <view class='details-text'>
      <view class='wording-left'>
        <!-- 头像部分 -->
            <view class="start_k secondBottom ">
                      <view >
                      <image class="img_big " src='http://ljp.jujiaoweb.com/images/index/poker/1.jpg'></image>            
                      </view>
                    <view class="padding-small margin-xs radius">
                        <view class="nameNo">胡敏</view>
                        <view class=" evaluate">评:第一次尝试这种效，</view> 
                        <view class="grid col-4 grid-square bg-imgSmall">
                              
                        </view>
              
                </view>
            </view>

      </view>

      <view class='clear'></view>
      
      
    </view>

    <!-- 附近门店 -->
    <view class='car-store' wx:if="{{car_store}}">
      <view class='log-list'>
        <view class="hot-content">
          <text class="hot-title">附近门店</text>
          <text class="all-dian" bindtap='all_dian'>全部门店 ></text>
        </view>
        <view class='clear'></view>
      </view>
      <block wx:for="{{fujin}}" wx:for-index="i" wx:key="{{index}}">
        <view wx:if="{{i < 1}}">
          <view wx:if="{{first_show}}">
            <view class='store-view'>
              <text class='store-address'>{{item.shopinfo.name}}\n</text>
              <text class='store-address'>{{item.shopinfo.address}}</text>
            </view>
            <view class='map-icon' bindtap='intoMap' data-id='{{item.shopid}}' data-dianPice='{{item.price}}' data-latitude='{{item.shopinfo.latitude}}' data-longitude='{{item.shopinfo.longitude}}' data-name="{{item.shopinfo.name}}" data-address="{{item.shopinfo.address}}">
