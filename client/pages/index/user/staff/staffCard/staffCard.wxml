    <view class='fangan-middle'>
      <view class='fangan-view'>
        <!-- 贷款方案1： -->
        <block wx:for="{{daikuanList}}" wx:key="{{index}}">
          <view class='white' bindtap='split_plan' data-firstpaymentratio='{{item.firstpaymentratio}}' data-firstpayment='{{item.firstpayment}}' data-monthpayment='{{item.monthpayment}}' data-id='{{index}}' data-months='{{item.months}}' data-schemeid='{{item.schemeid}}'
