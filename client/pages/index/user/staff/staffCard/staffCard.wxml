            <view class='tu'>
              <image src="http://image.autohuajiao.com/huajiao_c/shoufu.png" class='shoufu'></image>
            </view>
            <view class="zi">
              <view class='black'>首付{{firstpaymentratio}}</view>
              <view class='red'>{{carfirstpayment * 1000/10000000}}万</view>
            </view>
            <view class='clear'></view>
          </view>

          <view class="display-three">
            <view class='tu1'>
              <image src="http://image.autohuajiao.com/huajiao_c/yuegong.png" class='yuegong'></image>
            </view>
            <view class="zi1 zi2">
